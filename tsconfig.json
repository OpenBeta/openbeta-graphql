{
  "compilerOptions": {
    "types": ["node", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "build",
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [".ts", "src/**/*.ts", "tests/**/*.ts"]
}
