{
  "compilerOptions": {
    "types": [
      "node",
      "jest",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "build",
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
  ]
}